= form_for @location do |f|
  - if @location.errors.any?
    #error_explanation
      %h2= "#{pluralize(@location.errors.count, "error")} prohibited this location from being saved:"
      %ul
        - @location.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name       
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state    
  .field
    = f.label :accessible_by_ground_vehicle
    = f.check_box :accessible_by_ground_vehicle
  .field
    = f.label :local_water
    = f.text_field :local_water
  .field
    = f.label :humidity
    = f.number_field :humidity
  .field
    = f.label :air_quality
    = f.text_field :air_quality
  .actions
    = f.submit 'Save'
