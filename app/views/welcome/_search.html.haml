= form_tag search_wild_fires_path, :class => "form-inline", method: "get" do
	=label_tag "City"
	= text_field_tag "search[city]", "", :class => "form-control"
	=label_tag "State"
	= text_field_tag "search[state]","", :class => "form-control"
	=label_tag "Location Name:"
	= select_tag "search[name]", options_for_select(Location.pluck(:name)), include_blank: true, :class => "form-control"

	Accessible By Ground Vehicle:
	=radio_button_tag "search[accessible_by_ground_vehicle]", true, checked = false, :class => "radio"
	Fire Fighters Present?
	=radio_button_tag "search[firefighters_deployed]", true, checked = false, :class => "radio"

	= submit_tag "Search", :class => "btn btn-default"



